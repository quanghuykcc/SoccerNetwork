<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_background"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:textColor="@color/color_text_button"
        android:background="@color/color_background_button"
        android:gravity="center"
        android:text="@string/confirm" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10sp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã xác nhận đã được gởi về điện thoại của bạn. Vui lòng nhập mã vào bên dưới để hoàn thành thao tác"
            android:textColor="@color/color_text"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/et_code_verify"
            android:layout_width="200dp"
            android:ems="10"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/bt_ok_verify"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textColor="@color/color_text_button"
            android:textSize="20sp"
            android:background="@drawable/bg_button"
            android:textStyle="bold|italic"
            android:layout_gravity="center"
            />
    </LinearLayout>

</LinearLayout>