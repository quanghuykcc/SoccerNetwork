<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/join_match"
        android:gravity="center"
        android:textColor="@color/color_text_button"
        android:background="@color/color_background_button"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="@string/number_attended"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:id="@+id/tv_number_attender" />
        </LinearLayout>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sb_number_attender" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_text_button"
            android:background="@drawable/bg_button"
            android:id="@+id/btn_ok" />
    </LinearLayout>

</LinearLayout>